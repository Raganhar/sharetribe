- if shapes.size > 1
  = form.label :transaction_type_attributes, t(".transaction_types")
  = render :partial => "layouts/info_text", :locals => { :text => t(".transaction_types_description") }
  .row
    .col-12
      #category-transaction-types-container.clearfix
        - shapes.each do |shape|
          - checkbox_id = "listing_shape_checkbox_#{shape[:id].to_s}"
          .custom-field-categories-checkbox-container
            = check_box_tag "category[listing_shapes][][listing_shape_id]", "#{shape[:id]}", selected_shape_ids.include?(shape[:id]), :id => checkbox_id, :class => "category-transaction-type-checkbox"
            = label_tag checkbox_id, ts(shape[:name_tr_key]), :class => "category-transaction-type-checkbox-label"
- else
  = hidden_field_tag "category[listing_shapes][][listing_shape_id]", shapes.first[:id]
